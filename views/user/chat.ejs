    <script>
// Improved front-end JavaScript
const chatMessagesList = document.querySelector('.chat-message');
const chatInput = document.querySelector('#chat-input');
const sendButton = document.querySelector('#send-button');

sendButton.addEventListener('click', handleSendMessage);

async function handleSendMessage() {
  const userInput = chatInput.value;
  chatInput.value = '';

  try {
    const response = await fetch('/generate-story', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ prompt: userInput }),
    });

    if (response.ok) {
      const data = await response.json();
      console.log(data);
      appendMessageToChat(userInput, 'sent');
      appendMessageToChat(data.story, 'received');
      

    } else {
      console.error('Error sending message:', response.statusText);
    }
  } catch (error) {
    console.error('Error sending message:', error);
  }
}

function appendMessageToChat(message, type) {
  console.log('Appending message to chat:', message, type);

  const messageElement = document.createElement('li');
  messageElement.classList.add('media', 'd-flex', type === 'sent'? 'sent' : 'received');

  // Use a template engine or a more robust way of creating HTML elements
  messageElement.innerHTML = `
    <div class="media-body flex-grow-1">
      <div class="msg-box">
        <div class="message-sub-box">
          
          <p>${message}</p>
        </div>
      </div>
    </div>
  `;

  const chatMessagesList = document.querySelector('.chat-message');
  chatMessagesList.appendChild(messageElement); // Append the messageElement to the chatMessagesList
}

